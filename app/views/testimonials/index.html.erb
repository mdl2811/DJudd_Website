<center>
<h1> Testimonials </h1>

<% if @testimonials.any? %>
      <table class="table table.hover">
          <tr>
              <th><%= @user.name %></th>
          </tr>
          <% @testimonials.each do |testimonial| %>
          <tr>
            <td><%= testimonial.name %></td>
              <td><%= testimonial.title %></td>
              <td><%= testimonial.location %></td>
              <td><%= testimonial.body %></td>
              <td><%= link_to 'View Testimonial', testimonial_path(testimonial), class: 'btn btn-outline-primary' %></td>
              <td><%= link_to 'Edit Testimonial', edit_testimonial_path(testimonial), class: 'btn btn-outline-primary' %></td>
              <td><%= link_to 'Delete Testimonial',
                    testimonial_path(testimonial),
                    class: 'btn btn-outline-primary',
                    data: { confirm: 'Really Delete?'},
                    method: :delete %></td>
          </tr>
          <% end %>
      </table>


<% else %>
  <h3><%= link_to 'Create Testimonial', new_testimonial_path, class: 'btn-lg btn-outline-primary' %></h3>
<% end %>

<%= link_to "HomePage", root_path, class: 'btn btn-outline-primary'%>

<% if current_user %>
<td><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, class: 'btn btn-outline-primary' %></td>
<% end %>

<hr />
</center>
