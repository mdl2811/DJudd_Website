<h1> Testimonials </h1>

<% if @testimonials.any? %>
      <table class="table table.hover">
          <tr>
              <th><%= @user.name %></th>
          </tr>
          <% @testimonials.each do |testimonial| %>
          <tr>
              <td><%= testimonial.title %></td>
              <td><%= testimonial.body %></td>
              <td><%= link_to 'View Testimonial', testimonial_path(testimonial), class: 'btn btn-primary' %></td>
              <td><%= link_to 'Edit Testimonial', edit_testimonial_path(testimonial), class: 'btn btn-warning' %></td>
              <td><%= link_to 'Delete Testimonial',
                    testimonial_path(testimonial),
                    class: 'btn btn-danger',
                    data: { confirm: 'Really Delete?'},
                    method: :delete %></td>
          </tr>
          <% end %>
      </table>


<% else %>
  <h3>No Testimonials Found, Please Create One!</h3>
  <td><%= link_to 'Create Testimonial', new_testimonial_path, class: 'btn btn-primary' %></td>
<% end %>

<% if current_user %>
<td><%= link_to 'Sign Out', destroy_user_session_path, :method => :delete, class: 'btn btn-danger' %></td>
<% end %>

